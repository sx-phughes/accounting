{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Current File (external terminal)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Curses_Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/vendors/curses_test.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/vendors"
    }
  ]
}
